<div class="sign-in-register-container">
    <div class="sign-in-register-msg register">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "none" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "none" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "none", placeholder: "Password - (6 characters minimum)" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "none" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "main-cta" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>