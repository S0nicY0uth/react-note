<div class="sign-in-register-container">
  <div class="sign-in-register-msg">
  <h1>Noteable</h1>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'none' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'none' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'none' %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "main-cta" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
