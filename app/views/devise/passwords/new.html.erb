<div class="sign-in-register-container">
  <div class="sign-in-register-msg">

    <div class="headline">
      <h2>Forgot your password?</h2>
      <p>Confirm the email address you signed up with below, and we will send you some reset instructions...</p>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "none" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="actions">
        <%= f.submit "Send", class: "main-cta" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>